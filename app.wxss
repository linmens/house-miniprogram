@import "miniprogram_npm/tdesign-miniprogram/common/style/theme/_index.wxss";

page {
  background-color: var(--td-bg-color-page);
}
@media (prefers-color-scheme: dark) {
  page,
  .page {
    --td-text-card-color: rgb(194, 215, 239);
  }
}

.bg-main {
  background-color: var(
    --td-navbar-bg-color,
    var(--td-bg-color-container, var(--td-font-white-1, #ffffff))
  );
}
.m-l-20 {
  margin-left: 20rpx;
}
.m-t-20 {
  margin-top: 20rpx;
}
.m-b-20 {
  margin-bottom: 20rpx;
}
.my-20 {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.f-24 {
  font-size: 24rpx;
}

.p-20 {
  padding: 20rpx;
}

.px-20 {
  padding: 0 20rpx;
}

.p-b-20 {
  padding-bottom: 20rpx;
}
.py-20 {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}
.font-20 {
  font-size: 20rpx;
}
.f-row-center {
  justify-content: center;
}

.f-row-between {
  justify-content: space-between;
}

.f-col-center {
  align-items: center;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}
.text-blod {
  font-weight: bold;
}
.t-tab-bar--placeholder {
  height: var(--td-tab-bar-height, 112rpx);
  box-sizing: border-box;
  user-select: none;
  padding: 0 24rpx;
  position: relative;
}

.t-tab-bar {
  z-index: 99;
}

.t-tab-bar-safe {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  flex: 1;
}
