.l-card {
  background-color: var(--color-bg-b1-white);
  padding: var(--td-input-vertical-padding, 32rpx);
  border: 0.5px solid var(--color-line-l3);
  overflow: hidden;
  box-shadow: 0 0 0.5px 0 var(--color-secondary-default);
  border-radius: 20rpx;
  margin: var(--margin-32);
}

.l-card__header {
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  font-weight: bold;
}

.l-card__unit {
  margin-left: 10rpx;
  font-size: 20rpx;
}

.l-card__label--text {
  font-size: 20rpx;
  margin-right: 10rpx;
  color: var(--td-gray-color-9);
}

.l-card__main {
  font-size: 24rpx;
}

.l-card__main--item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.l-card__main__label {
  flex: 1;
}

.l-card__main__value {
  flex: 0 0 25%;
  text-align: right;
}
.l-card__main--desc {
  color: var(--td-gray-color-7);
}
