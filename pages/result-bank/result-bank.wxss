.bank-total {
  margin: 32rpx;
  align-items: center;
}
.bank-total__item {
  display: flex;
  flex-direction: column;
  flex: 1;
  padding: 8rpx;
  background-color: var(--color-bg-b1-white);
  border-radius: 10rpx;
  box-sizing: border-box;
  overflow: hidden;
  box-shadow: 0 0 0.5px 0 var(--color-secondary-default);
  border: 0.5px solid var(--color-line-l3);
}
.bank-total__item__label {
  font-size: 20rpx;
  color: var(--color-text-t2);
  width: 100%;
}
.bank-total__item__value {
  color: var(--color-text-t0);
}
.bank-total__item__desc {
  font-size: 20rpx;
  color: var(--td-warning-color-8);
}
.l-table {
  width: 100%;
  position: relative;
  height: 264px;
  overflow: hidden;
  overflow-y: scroll;
  box-sizing: border-box;
}
.l-class__header {
  padding: 20rpx;
}

.l-table__thead {
  background: linear-gradient(
    to bottom,
    var(--color-secondary-default),
    var(--color-bg-b1-white)
  );
  /* background-color: var(--color-secondary-default); */
  height: 44px;
  font-weight: bold;
  text-align: center;
  font-size: 20rpx;
  position: sticky;
  top: 0;
  line-height: 44px;
  display: flex;
}

.l-table__thead text {
  flex: 1;
}
.l-table__tbody:nth-of-type(even) {
  background-color: var(--color-secondary-default);
}
.l-table__tbody .l-table__row {
  display: flex;
  height: 44px;
  align-items: center;
}

.l-table__row text {
  flex: 1;
  text-align: center;
}
.l-table__unit {
  color: var(--color-text-t3);
  height: 44px;
  align-items: center;
  text-align: right;
  line-height: 44px;
  padding: 0 20rpx;
}
.l-table__footer {
  background: linear-gradient(
    to bottom,
    var(--color-bg-bo-white),
    var(--color-bg-b1-white)
  );
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  line-height: 44px;
  color: var(--color-text-t3);
  position: sticky;
}
