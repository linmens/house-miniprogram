.row-tag {
  display: flex;
  align-items: center;
  overflow: hidden;
  position: relative;
  padding: var(--td-input-vertical-padding, 32rpx);
  box-sizing: border-box;
  width: 100%;

  height: 100%;
}

.l-card__group {
  margin: 32rpx;
  border-radius: var(--td-radius-large, 18rpx);
  overflow: hidden;
}

.l-result__card {
  background-color: var(
    --td-cell-bg-color,
    var(--td-bg-color-container, var(--td-font-white-1, #ffffff))
  );
  border-radius: var(--td-radius-large, 18rpx);
  overflow: hidden;
  margin: 20rpx 0;
}

.l-result__card__title {
  padding: 20rpx;
}

.l-result__card__main {
  display: flex;
  padding-bottom: 20rpx;
}

.l-result__card__main__item {
  display: flex;
  flex-direction: column;
  flex: 1;
  justify-content: center;
  align-items: center;
}

.l-result__card__main__item__label {
  color: var(--td-gray-color-9);
  font-size: 20rpx;
}

.l-result__card__main__item__value {
  font-weight: bold;
  font-size: 40rpx;
}
.total-price {
  font-size: large;
  font-weight: bold;
  color: var(--td-primary-color-8);
}
.loan__group {
  display: flex;
}
.loan__group__item {
  flex: 1;
  padding: 12rpx;
}
.loan__group__item__active {
  background-color: var(--td-brand-color-light);
  /* border-radius: 10rpx; */
}

.loan__group__item__list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}
.loan__group__item__list:last-child {
  margin-bottom: 0;
}
.loan__group__item__list .font-20 {
  margin-left: 10rpx;
}
