.row-tag {
  display: flex;
  align-items: center;
  overflow: hidden;
  position: relative;
  padding-bottom: 32rpx;
  box-sizing: border-box;
  width: 100%;

  height: 100%;
}

.total-price {
  font-size: large;
  font-weight: bold;
  color: var(--td-brand-color);
}

.t-steps-item__title {
  position: relative;
  line-height: var(--td-step-item-circle-size, 44rpx);
  font-size: var(--td-font-size-base, 28rpx);
}
.borderless {
  border: none !important;
}
